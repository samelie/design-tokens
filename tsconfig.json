{
    "compilerOptions": {
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
        "skipDefaultLibCheck": true,
        "exactOptionalPropertyTypes": true,
        "noUncheckedIndexedAccess": true,
        "noErrorTruncation": true,
        "traceResolution": false,
        "noPropertyAccessFromIndexSignature": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,
        "paths": {
            "@rad/env": [
                "./packages/env/src/index",
                "../env/src/index",
                "../packages/env/src/index",
                "../../packages/env/src/index",
                "../../../packages/env/src/index"
            ],
            "@rad/vite": [
                "./packages/vite/src/index",
                "../vite/src/index",
                "../packages/vite/src/index",
                "../../packages/vite/src/index",
                "../../../packages/vite/src/index"
            ],
            "@rad/publish/*": [
                "./packages/publish/src/*",
                "../publish/src/*",
                "../packages/publish/src/*",
                "../../packages/publish/src/*",
                "../../../packages/publish/src/*"
            ],
            "@rad/logging": [
                "./packages/logging/src/index",
                "../logging/src/index",
                "../packages/logging/src/index",
                "../../packages/logging/src/index",
                "../../../packages/logging/src/index"
            ],
            "@rad/config": [
                "./packages/config/src/index",
                "../config/src/index",
                "../packages/config/src/index",
                "../../packages/config/src/index",
                "../../../packages/config/src/index"
            ],
            "@rad/design-tokens/*": [
                "./packages/design-tokens/*",
                "../design-tokens/*",
                "../packages/design-tokens/*",
                "../../packages/design-tokens/*",
                "../../../packages/design-tokens/*"
            ],
            "@rad/eslint": [
                "./packages/eslint",
                "../eslint",
                "../packages/eslint",
                "../../packages/eslint",
                "../../../packages/eslint",
                "../../../../packages/eslint"
            ],
            "@rad/eslint-plugin-rules": [
                "./packages/eslint-plugin-rules",
                "../eslint-plugin-rules",
                "../packages/eslint-plugin-rules",
                "../../packages/eslint-plugin-rules",
                "../../../packages/eslint-plugin-rules",
                "../../../../packages/eslint-plugin-rules"
            ],
            "@rad/global-type-defs": [
                "./packages/global-type-defs",
                "../global-type-defs",
                "../packages/global-type-defs",
                "../../packages/global-type-defs",
                "../../../packages/global-type-defs",
                "../../../../packages/global-type-defs"
            ],
            "@rad/type-utils": [
                "./packages/type-utils/src/index",
                "../type-utils/src/index",
                "../packages/type-utils/src/index",
                "../../packages/type-utils/src/index",
                "../../../packages/type-utils/src/index"
            ]
        },
        "types": [
            "node"
        ]
    },
    "include": [
        "src",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ],
    "watchOptions": {
        "excludeDirectories": [
            "**/node_modules",
            "build",
            "dist"
        ],
        "fallbackPolling": "dynamicPriority",
        "synchronousWatchDirectory": true,
        "watchDirectory": "UseFsEvents",
        "watchFile": "UseFsEventsOnParentDirectory"
    }
}