{
  "name": "@adddog/design-tokens",
  "version": "0.0.9",
  "description": "Configurable design token library built on Style Dictionary with CLI support for generating themes, colors, and design system tokens",
  "license": "MIT",
  "keywords": [
    "design-tokens",
    "style-dictionary",
    "theming",
    "css-variables",
    "design-system",
    "tokens",
    "css",
    "scss",
    "typescript"
  ],
  "author": "Sam Elie <sam@add.dog>",
  "homepage": "https://github.com/samelie/design-tokens#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/samelie/design-tokens.git"
  },
  "bugs": {
    "url": "https://github.com/samelie/design-tokens/issues"
  },
  "bin": {
    "design-tokens": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts"
    },
    "./cli": {
      "import": "./src/cli.ts"
    },
    "./package.json": "./package.json",
    "./dark.css": "./output/dark.css",
    "./dark": "./output/dark.ts",
    "./light.css": "./output/light.css",
    "./light": "./output/light.ts"
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "dist",
    "output",
    "design-tokens.config.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "unbuild && pnpm build:tokens",
    "build:cli": "unbuild",
    "build:tokens": "tsx ./styledict.config.mts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "bumpp --yes --no-push --no-tag --release patch",
    "prepublishOnly": "pnpm run types && pnpm run build",
    "prepack": "pnpm run prepublishOnly",
    "types": "tsc -p tsconfig.typecheck.json",
    "test": "vitest --watch=false",
    "dev": "tsx src/index.ts",
    "knip": "knip",
    "version:patch": "npm version patch --no-git-tag-version"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "commander": "^14.0.3",
    "culori": "^4.0.2",
    "picocolors": "^1.1.1",
    "polished": "^4.3.1",
    "style-dictionary": "^5.3.2"
  },
  "devDependencies": {
    "@adddog/build-configs": "^0.0.6",
    "@adddog/monorepo-consistency": "workspace:*",
    "@types/culori": "^4.0.1",
    "bumpp": "^10.4.1",
    "eslint": "^10.0.2",
    "knip": "^5.85.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vitest": "^4.0.18"
  },
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.cjs"
      },
      "./cli": {
        "types": "./dist/cli.d.ts",
        "import": "./dist/cli.mjs"
      },
      "./package.json": "./package.json",
      "./dark.css": "./output/dark.css",
      "./dark": "./output/dark.ts",
      "./light.css": "./output/light.css",
      "./light": "./output/light.ts"
    },
    "main": "./dist/index.mjs",
    "types": "./dist/index.d.ts"
  },
  "engines": {
    "node": ">= 22",
    "pnpm": ">= 10",
    "npm": ">= 11"
  }
}
