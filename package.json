{
  "name": "@adddog/design-tokens",
  "version": "0.0.2",
  "description": "Configurable design token library built on Style Dictionary with CLI support for generating themes, colors, and design system tokens",
  "license": "MIT",
  "keywords": [
    "design-tokens",
    "style-dictionary",
    "theming",
    "css-variables",
    "design-system",
    "tokens",
    "css",
    "scss",
    "typescript"
  ],
  "author": "Sam Elie <sam@add.dog>",
  "homepage": "https://github.com/samelie/design-tokens#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/samelie/design-tokens.git"
  },
  "bugs": {
    "url": "https://github.com/samelie/design-tokens/issues"
  },
  "bin": {
    "design-tokens": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.mjs"
    },
    "./package.json": "./package.json",
    "./dark.css": "./output/dark.css",
    "./dark": "./output/dark.ts",
    "./light.css": "./output/light.css",
    "./light": "./output/light.ts"
  },
  "files": [
    "dist",
    "output",
    "design-tokens.config.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "unbuild && pnpm build:tokens",
    "build:cli": "unbuild",
    "build:tokens": "tsx ./styledict.config.mts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "bumpp --yes --no-push --no-tag --release patch",
    "prepublishOnly": "pnpm run lint && pnpm run types && pnpm run build",
    "prepack": "pnpm run prepublishOnly",
    "types": "tsc -p tsconfig.typecheck.json",
    "test": "echo '⚠️⚠️⚠️no test vitest --watch=false'",
    "dev": "tsx src/index.ts",
    "knip": "knip"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "commander": "^14.0.2",
    "culori": "^4.0.2",
    "picocolors": "^1.1.1",
    "polished": "^4.3.1",
    "style-dictionary": "^5.1.4"
  },
  "devDependencies": {
    "@adddog/build-configs": "workspace:*",
    "@adddog/design-tokens": "workspace:*",
    "@adddog/eslint": "workspace:*",
    "@rad/config": "workspace:*",
    "@types/culori": "^4.0.1",
    "bumpp": "^10.4.0",
    "eslint": "^9.39.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1"
  },
  "type": "module",
  "private": false,
  "engines": {
    "node": ">= 22",
    "pnpm": ">= 10",
    "npm": ">= 11"
  }
}
